<%= form_for(:user) do |f| -%>
  <%= f.error_messages %>
  <p>Enter the email address for your account.</p>
  <div class='field'>
    <%= f.label :email %>
    <%= f.text_field :email, :class => "larger" %>
  </div>
  <div class='form-actions'>
    <%= submit_tag 'Reset password' %>
    or
    <%= link_to "Cancel", login_url %>
  </div>
<% end -%>
<% content_for :header, "Please enter the email address for your account." %>
